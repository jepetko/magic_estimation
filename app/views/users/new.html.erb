<div class="well">
    <%= form_for @user do |f| %>
        <div class="control-group">
            <%=f.label :name %>
            <%=f.text_field :name %>
        </div>
        <div class="control-group">
          <%=f.label :password %>
          <%=f.password_field :password %>
        </div>
        <div class="control-group">
          <%=f.label 'Password (confirm)' %>
          <%=f.password_field :password_confirmation %>
        </div>
        <%=f.submit 'Register', class: 'btn btn-success' %>
    <% end %>
</div>