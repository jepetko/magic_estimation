<% buttons ||= {} %>
<div class="panel panel-default">
  <div class="panel-heading"><%= backlog.name %></div>
  <div class="panel-body">
    <%= backlog.description %>
  </div>
  <% if logged_in? %>
      <div class="panel-footer">
        <%= link_to 'Show', backlog_path(backlog), class: 'btn btn-default' if buttons[:show] %>
        <% if current_user.admin? %>
            <%= link_to 'Edit', edit_backlog_path(backlog), class: 'btn btn-primary' if buttons[:edit] %>
            <%= link_to 'Destroy', backlog_path(backlog), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' if buttons[:destroy] %>
        <% end %>
      </div>
  <% end %>
</div>