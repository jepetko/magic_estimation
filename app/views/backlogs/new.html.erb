<div class="well">
    <%= form_for @backlog do |f| %>
        <div class="control-group">
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>
        <div class="control-group">
            <%= f.label :description %>
            <%= f.text_area :description, rows: 10, class: 'description' %>
        </div>
        <%= f.submit 'Save', class: 'btn btn-success' %>
    <% end %>
</div>