<%= render 'shared/messages', obj: @backlog %>
<div class="well">
  <%= form_for @backlog do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'name of the backlog' %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 10, class: 'form-control description', placeholder: 'short description of this backlog' %>
      </div>
      <%= f.submit 'Save', class: 'btn btn-success' %>
  <% end %>
</div>