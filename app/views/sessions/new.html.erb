<div class="well">
    <%= form_tag '/login', method: :post do %>
        <div class="form-group">
            <%= label_tag :login %>
            <br/>
            <%= text_field_tag :username, nil, class: 'form-control', placeholder: 'Your username' %>
        </div>
        <div class="form-group">
            <%= label_tag :password %>
            <br/>
            <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Your password' %>
        </div>
        <div class="form-group">
            <%= submit_tag 'Login', class: 'btn btn-success' %>
        </div>
    <% end %>
</div>