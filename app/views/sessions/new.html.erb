<div class="well">
    <%= form_tag '/login', method: :post do %>
        <div class="control-group">
            <%= label_tag :login %>
            <%= text_field_tag :username %>
        </div>
        <div class="control-group">
            <%= label_tag :password %>
            <%= password_field_tag :password %>
        </div>
        <%= submit_tag 'Login', class: 'btn btn-success' %>
    <% end %>
</div>